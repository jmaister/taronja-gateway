<Layout title="Roster - Thunder Hawks Hockey Team">
	<h1>Team Roster</h1>
	
	<div class="card">
		<h2>üë• Coaching Staff</h2>
		<div class="coaches-grid">
			{coaches.map((coach) => (
				<div class="coach-card">
					<div class="coach-avatar">
						<div class="avatar-placeholder">
							{coach.name.split(' ').map(n => n[0]).join('')}
						</div>
					</div>
					<div class="coach-info">
						<h3>{coach.name}</h3>
						<p class="position">{coach.position}</p>
						<p class="experience">Experience: {coach.experience}</p>
						<p class="achievements">{coach.achievements}</p>
					</div>
				</div>
			))}
		</div>
	</div>

	<div class="card">
		<h2>üèí Player Roster</h2>
		<div class="position-filter">
			<button class="filter-btn active" data-position="all">All Players</button>
			<button class="filter-btn" data-position="Center">Centers</button>
			<button class="filter-btn" data-position="Left Wing">Left Wings</button>
			<button class="filter-btn" data-position="Right Wing">Right Wings</button>
			<button class="filter-btn" data-position="Defense">Defense</button>
			<button class="filter-btn" data-position="Goalie">Goalies</button>
		</div>
		
		<div class="players-grid">
			{players.map((player) => (
				<div class={`player-card ${player.position.toLowerCase().replace(' ', '-')}`} data-position={player.position}>
					<div class="player-header">
						<div class="player-number">#{player.number}</div>
						<div class="player-position">{player.position}</div>
					</div>
					<div class="player-info">
						<h3>{player.name}</h3>
						<div class="player-details">
							<div class="detail">
								<span class="label">Age:</span>
								<span class="value">{player.age}</span>
							</div>
							<div class="detail">
								<span class="label">Height:</span>
								<span class="value">{player.height}</span>
							</div>
							<div class="detail">
								<span class="label">Weight:</span>
								<span class="value">{player.weight}</span>
							</div>
							<div class="detail">
								<span class="label">Hometown:</span>
								<span class="value">{player.hometown}</span>
							</div>
						</div>
					</div>
					<div class="player-stats">
						{player.position === 'Goalie' ? (
							<>
								<div class="stat">
									<span class="stat-value">{player.saves}</span>
									<span class="stat-label">Saves</span>
								</div>
								<div class="stat">
									<span class="stat-value">{player.savePercent}</span>
									<span class="stat-label">Save %</span>
								</div>
								<div class="stat">
									<span class="stat-value">{player.gaa}</span>
									<span class="stat-label">GAA</span>
								</div>
							</>
						) : (
							<>
								<div class="stat">
									<span class="stat-value">{player.goals}</span>
									<span class="stat-label">Goals</span>
								</div>
								<div class="stat">
									<span class="stat-value">{player.assists}</span>
									<span class="stat-label">Assists</span>
								</div>
								<div class="stat">
									<span class="stat-value">{player.points}</span>
									<span class="stat-label">Points</span>
								</div>
							</>
						)}
					</div>
				</div>
			))}
		</div>
	</div>

	<div class="card">
		<h2>üìà Team Statistics</h2>
		<div class="team-stats">
			<div class="stat-category">
				<h3>Offense</h3>
				<div class="stats-list">
					<div class="team-stat">
