<style>
	.coaches-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
		gap: 1.5rem;
		margin-top: 1rem;
	}
	
	.coach-card {
		display: flex;
		gap: 1rem;
		padding: 1.5rem;
		background: linear-gradient(135deg, #f8f9fa, #e9ecef);
		border-radius: 10px;
		border-left: 4px solid #ffd700;
	}
	
	.coach-avatar {
		flex-shrink: 0;
	}
	
	.avatar-placeholder {
		width: 60px;
		height: 60px;
		background: #1e3c72;
		color: white;
		border-radius: 50%;
		display: flex;
		align-items: center;
		justify-content: center;
		font-weight: bold;
		font-size: 1.2rem;
	}
	
	.coach-info h3 {
		color: #1e3c72;
		margin-bottom: 0.5rem;
	}
	
	.position {
		color: #ffd700;
		font-weight: bold;
		margin-bottom: 0.25rem;
	}
	
	.experience, .achievements {
		color: #666;
		font-size: 0.9rem;
		margin-bottom: 0.25rem;
	}
	
	.position-filter {
		display: flex;
		gap: 0.5rem;
		margin-bottom: 2rem;
		flex-wrap: wrap;
	}
	
	.filter-btn {
		padding: 0.5rem 1rem;
		border: 2px solid #1e3c72;
		background: white;
		color: #1e3c72;
		border-radius: 25px;
		cursor: pointer;
		font-weight: 600;
		transition: all 0.3s ease;
	}
	
	.filter-btn:hover,
	.filter-btn.active {
		background: #1e3c72;
		color: white;
	}
	
	.players-grid {
		display: grid;
		grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
		gap: 1.5rem;
	}
	
	.player-card {
		background: white;
		border-radius: 10px;
		overflow: hidden;
		box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
		transition: transform 0.3s ease, box-shadow 0.3s ease;
		border-top: 4px solid #1e3c72;
	}
	
	.player-card:hover {
		transform: translateY(-5px);
		box-shadow: 0 10px 25px rgba(0, 0, 0, 0.15);
	}
	
	.player-header {
		background: linear-gradient(135deg, #1e3c72, #2a5298);
		color: white;
		padding: 1rem;
		display: flex;
		justify-content: space-between;
		align-items: center;
	}
	
	.player-number {
		font-size: 2rem;
		font-weight: bold;
		color: #ffd700;
	}
	
	.player-position {
		background: rgba(255, 255, 255, 0.2);
		padding: 0.25rem 0.75rem;
		border-radius: 15px;
		font-size: 0.9rem;
		font-weight: 600;
	}
	
	.player-info {
		padding: 1rem;
	}
	
	.player-info h3 {
		color: #1e3c72;
		margin-bottom: 1rem;
		font-size: 1.3rem;
	}
	
	.player-details {
		display: grid;
		grid-template-columns: 1fr 1fr;
		gap: 0.5rem;
	}
	
	.detail {
		display: flex;
		justify-content: space-between;
		font-size: 0.9rem;
	}
	
	.label {
		color: #666;
		font-weight: 600;
	}
	
	.value {
		color: #333;
	}
	
	.player-stats {
		background: #f8f9fa;
		padding: 1rem;
		display: flex;
		justify-content: space-around;
	}
	
	.stat {
		text-align: center;
	}
	
	.stat-value {
		display: block;
		font-size: 1.5rem;
		font-weight: bold;
		color: #1e3c72;
	}
	
	.stat-label {
		font-size: 0.8rem;
		color: #666;
		text-transform: uppercase;
		letter-spacing: 1px;
	}
	
	.team-stats {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
		gap: 2rem;
		margin-top: 1rem;
	}
	
	.stat-category h3 {
		color: #1e3c72;
		border-bottom: 2px solid #ffd700;
		padding-bottom: 0.5rem;
		margin-bottom: 1rem;
	}
	
	.stats-list {
		display: flex;
		flex-direction: column;
		gap: 0.75rem;
	}
	
	.team-stat {
		display: flex;
		justify-content: space-between;
		padding: 0.75rem;
		background: #f8f9fa;
		border-radius: 5px;
		border-left: 3px solid #1e3c72;
	}
	
	.team-stat span:last-child {
		font-weight: bold;
		color: #1e3c72;
	}
	
	/* Position-based card colors */
	.player-card.center {
		border-top-color: #4CAF50;
	}
	
	.player-card.left-wing,
	.player-card.right-wing {
		border-top-color: #FF9800;
	}
	
	.player-card.defense {
		border-top-color: #2196F3;
	}
	
	.player-card.goalie {
		border-top-color: #9C27B0;
	}
	
	@media (max-width: 768px) {
		.coaches-grid {
			grid-template-columns: 1fr;
		}
		
		.coach-card {
			flex-direction: column;
			text-align: center;
		}
		
		.position-filter {
			justify-content: center;
		}
		
		.players-grid {
			grid-template-columns: 1fr;
		}
		
		.player-details {
			grid-template-columns: 1fr;
		}
		
		.team-stats {
			grid-template-columns: 1fr;
		}
	}
</style>

<script>
	// Add filtering functionality
	document.addEventListener('DOMContentLoaded', function() {
		const filterButtons = document.querySelectorAll('.filter-btn') as NodeListOf<HTMLElement>;
		const playerCards = document.querySelectorAll('.player-card') as NodeListOf<HTMLElement>;
		
		filterButtons.forEach(button => {
			button.addEventListener('click', function(this: HTMLElement) {
				// Remove active class from all buttons
				filterButtons.forEach(btn => btn.classList.remove('active'));
				// Add active class to clicked button
				this.classList.add('active');
				
				const selectedPosition = this.dataset.position;
				
				playerCards.forEach(card => {
					if (selectedPosition === 'all' || card.dataset.position === selectedPosition) {
						card.style.display = 'block';
					} else {
						card.style.display = 'none';
					}
				});
			});
		});
	});
</script>
