---
import '../styles/global.css';

export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Thunder Hawks Hockey Team - Official Website" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="font-sans leading-relaxed text-gray-800 bg-gradient-to-br from-indigo-500 to-purple-600 min-h-screen">
		<nav class="bg-black/80 py-4 sticky top-0 z-50">
			<div class="max-w-6xl mx-auto px-5">
				<ul class="list-none flex justify-center gap-8">
					<li><a href="/" class="text-white no-underline font-semibold text-lg transition-colors duration-300 hover:text-yellow-400">Home</a></li>
					<li><a href="/schedule" class="text-white no-underline font-semibold text-lg transition-colors duration-300 hover:text-yellow-400">Schedule</a></li>
					<li><a href="/dashboard/roster" class="text-white no-underline font-semibold text-lg transition-colors duration-300 hover:text-yellow-400">Roster</a></li>
				</ul>
			</div>
		</nav>
		<main class="py-8">
			<div class="max-w-6xl mx-auto px-5">
				<slot />
			</div>
		</main>
	</body>
</html>
